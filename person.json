{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "person",
  "type": "object",
  "x-internal": false,
  "properties": {
    "given_name": {
      "type": "array",
      "description": "This is the given name for the subject",
      "items": {
        "type": "string",
        "minLength": 0,
        "maxLength": 32
      }
    },
    "surname": {
      "type": "string",
      "description": "This is the surname for the subject",
      "minLength": 0,
      "maxLength": 32
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 120,
      "format": "int32",
      "description": "Subject age"
    },
    "date_of_birth": {
      "type": "string",
      "format": "date",
      "description": "Subject date of birth"
    },
    "place_of_birth": {
      "type": "string",
      "description": "Subjects place of birth",
      "minLength": 32,
      "maxLength": 32
    },
    "gender": {
      "$ref": "./gender.json"
    },
    "address": {
      "$ref": "./address.json"
    },
    "address_type": {
      "type": "string",
      "enum": [
        "home",
        "business"
        "contact",
        "c/o",
        "no fixed abode"
      ]
    }
  },
  "required": [
    "age",
    "gender",
    "address",
    "address_type"
  ],
  "examples": [
    {
      "given_name": [
        "Fred",
        "John"
      ],
      "surname": "Bl;oggs",
      "age": 45,
      "date_of_birth": "1976-03-68",
      "place_of_birth": "Edinburgh",
      "gender": "Male",
      "address": {
        "street_address": "3 High Street",
        "city": "Edniburgh",
        "county": "Lothian",
        "postcode": "EH1 2TH",
        "country": "string",
        "locationUPRN": "123456123456"
      },
      "address_type": "home"
    }
  ]
}