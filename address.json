    },
    "city": {
      "type": "string"  
    },
    "county": {
      "type": "string"
    },
    "postcode": {
      "type": "string",
      "pattern": "[A-Z][A-Z][0-9] [0-9][A-Z][A-Z]"
    },
    "country": {
      "type": "string" 
